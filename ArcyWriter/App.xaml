<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ArcyWriter.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary x:Key="DarkTheme">
                <Color x:Key="PageBackgroundColor">#373737</Color>
                <Color x:Key="PrimaryTextColor">#c1c1c2</Color>
                <Color x:Key="SwitchThumbColor">#FFFFFF</Color>
                <Color x:Key="SwitchOnColor">#4CAF50</Color>
                <Color x:Key="SecondaryTextColor">#FFFFFF</Color>
                <Color x:Key="FooterTextColor">#949494</Color>
            </ResourceDictionary>

            <ResourceDictionary x:Key="LightTheme">
                <Color x:Key="PageBackgroundColor">#FFFFFF</Color>
                <Color x:Key="PrimaryTextColor">#000000</Color>
                <Color x:Key="SwitchThumbColor">#000000</Color>
                <Color x:Key="SwitchOnColor">#000000</Color>
                <Color x:Key="SecondaryTextColor">#000000</Color>
                <Color x:Key="TextColor">#000000</Color>
            </ResourceDictionary>
        </ResourceDictionary>
    </Application.Resources>
</Application>